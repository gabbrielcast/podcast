{% extends 'base.html.twig' %}

{# ... #}

{% block body %}

    <div class="hero w-100 d-flex" >

        <div class="container">
            <div class="row">
            
                <div class="col-md-2 w-50 d-flex align-items-center">
                    <h1 class="hero-titulo">La Plataforma de Podcast para Todo el Publico</h1>
                </div>
                <div class="col-md-2 w-50 d-flex img-seccion-hero">
                
                    <img class="img-hero" src="/img/home-foto.jpg" width="100" height="100">

                </div>
            
            </div>
             <div class="row">
            
                <div class="col d-flex justify-content-center">
                    <a href="/profile" class="btn btn-lg btn-dark text-white" >Subir Un Podcast</a>
                </div>
            
            </div>
        </div>

    </div>

    <div class="seccion-categorias w-100 d-flex" >

        <div class="container">
            <div class="row mb-5">
                <h2 class="text-white">Las Categorias Mas Diversas Posibles!</h2>
            </div>
            <div class="row d-flex justify-content-around">

                <div class="list-categorias">
                    <div class="card-podcast">
                        <img class="card-podcast-img-top" src="/img/cat-deporte.jpg" alt="Card image cap">
                        <div class="card-podcast-body">
                            <p class="card-pocast-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    </div>

                    <div class="card-podcast" >
                        <img class="card-podcast-img-top" src="/img/cat-misterio.jpg" alt="Card image cap">
                        <div class="card-podcast-body">
                            <p class="card-pocast-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    </div>

                    <div class="card-podcast" >
                        <img class="card-podcast-img-top" src="/img/cat-noticias.jpg" alt="Card image cap">
                        <div class="card-podcast-body">
                            <p class="card-pocast-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

    <div class="seccion-podcast w-100 d-flex mt-5" >

        <div class="contenedor-podcast">
            <div class="row mb-3 mt-3">
                <h2>Inicia Sesion para ver podcasts como estos</h2>
            </div>
                <div class="podcast-lista">
                    {% for podcast in podcasts %}
                        <div class="card-podcast hover">
                            <img class="card-podcast-img-top" src="/uploads/{{podcast.imagen}}" alt="Card image cap">
                            <div class="card-podcast-body">
                                <h4>{{podcast.titulo}}</h4>
                                <p class="card-pocast-text">{{ podcast.descripcion[:30]}}...</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
        </div>

    </div>

{% endblock %}


